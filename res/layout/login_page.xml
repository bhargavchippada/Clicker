<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    	<TextView
    	    android:layout_width="match_parent"
    	    android:layout_height="48dp"
    	    android:paddingLeft="16dp"
    	    android:text="Clicker! Welcome!"
    	    android:textSize="20sp"
    	    android:textStyle="italic"
    	    android:textColor="@android:color/white"
    	    android:gravity="center_vertical"
    	    android:background="@color/app_background"/>
    	<ImageView
    	    android:layout_width="128dp"
    	    android:layout_height="128dp"
    	    android:layout_margin="16dp"
    	    android:background="@drawable/inverted_launcher"/>
    	<LinearLayout
			    android:layout_width="256dp"
			    android:layout_height="match_parent"
			    android:orientation="vertical">
	    	<TextView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center_horizontal"
	    	    android:text="Login Information"
	    	    android:textSize="24sp"
	    	    android:textStyle="bold"
	    	    android:layout_marginBottom="16dp"/>
	    	<EditText
	    	    android:id="@+id/edtxt_username"
	    	    android:layout_width="256dp"
	    	    android:layout_height="48dp"
	    	    android:inputType="text"
	    	    android:hint="Username"/>
	    	<EditText 
	    	    android:id="@+id/edtxt_password"
	    	    android:layout_width="256dp"
	    	    android:layout_height="48dp"
	    	    android:layout_marginTop="8dp"
	    	    android:inputType="text"
	    	    android:hint="Password"/>
	    	<CheckBox
	    	    android:id="@+id/cbox_savedetails"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="8dp"
	    	    android:text="Save details" />
	    	<Button 
	    	    android:id="@+id/btn_login"
	    	    android:layout_width="128dp"
	    	    android:layout_height="48dp"
	    	    android:layout_marginTop="8dp"
	    	    android:layout_gravity="center_horizontal"
	    	    android:text="Login"/>
	    	<TextView 
	    	    android:id="@+id/txtvw_status"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_margin="4dp"
	    	    android:layout_gravity="center"
	    	    android:text="Press 'Login' to login..."
	    	    android:textSize="20sp"
	    	    android:textStyle="italic"/>
    	</LinearLayout>
</LinearLayout>
</ScrollView>
