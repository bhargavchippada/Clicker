<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/app_background"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="Clickr!"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="Connection Info"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtxt_ipaddress"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:hint="Type IP address"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtxt_port"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Type Port Number"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Login Info"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtxt_username"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:hint="Username"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtxt_password"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/cbox_savesettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Save settings" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="128dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Login" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtvw_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="Click to login"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

</ScrollView>